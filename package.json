{
  "name": "auth",
  "version": "1.0.0",
  "description": "authentication server",
  "type": "module",
  "scripts": {
    "clean": "if exist dist rmdir /s /q dist",
    "lint:src": "pnpm eslint",
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "build": "npm run build:client-view && npm run build:server-view && npm run build:server",
    "build:client-view": "vite build --outDir dist/ssr",
    "build:server-view": "node script/build-server-view.js",
    "preview": "cross-env NODE_ENV=production node dist/src/server.js",
    "build:server": "tsc --project tsconfig.server.json",
    "extract": "lingui extract",
    "compile": "lingui compile --typescript"
  },
  "keywords": [
    "jwt",
    "authentication",
    "login",
    "express",
    "mongodb",
    "SSR",
    "React",
    "vite",
    "typescript",
    "zod"
  ],
  "author": "shubham oulkar",
  "license": "ISC",
  "dependencies": {
    "@lingui/babel-plugin-lingui-macro": "^5.3.1",
    "@lingui/core": "^5.3.1",
    "@lingui/react": "^5.3.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "country-flag-icons": "^1.5.18",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^8.1.0",
    "jose": "^5.10.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.16.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1",
    "react": "^19.1.0",
    "react-content-loader": "^7.0.2",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-loading-skeleton": "^3.5.0",
    "react-router": "^7.5.2",
    "sirv": "^3.0.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@lingui/cli": "^5.3.1",
    "@lingui/vite-plugin": "^5.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.2",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vite-plugin-svgr": "^4.3.0"
  },
  "npm": {
    "onlyBuiltDependencies": [
      "bcrypt",
      "@swc/core",
      "esbuild",
      "protobufjs"
    ]
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node"
  }
}
